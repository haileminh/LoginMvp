<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/ll_login_register"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@id/img_logo"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_login_register_inactive"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Login"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_register"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_login_register_active"
                android:gravity="center"
                android:text="Register"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_login_register"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edt_"
            android:hint="User name"
            android:padding="8dp" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_user_name"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edt_"
            android:hint="Email"
            android:padding="8dp" />

        <EditText
            android:id="@+id/edt_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_email"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edt_"
            android:hint="Password"
            android:padding="8dp" />

        <Button
            android:id="@+id/btn_login_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_pass"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:text="Register" />
    </RelativeLayout>
</RelativeLayout>
